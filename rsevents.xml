<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search">
    <name>Search - RSEvents</name>
    <author>Samuel Mehrbrodt</author>
    <creationDate>January 2011</creationDate>
    <copyright>Copyright (C) 2005 - 2011 www.rsjoomla.com; (C) 2014 Samuel Mehrbrodt. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>s.mehrbrodt@gmail.com</authorEmail>
    <authorUrl>https://github.com/smehrbrodt/rsevents_plg_search</authorUrl>
    <version>1.1.0</version>
    <description>Allows Searching for RSEvents events.</description>
    <files>
        <filename plugin="rsevents">rsevents.php</filename>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text"
                       default="50"
                       description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
                       label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
                       size="5"
                        />
                <field name="enable_event_description_search"
                       type="radio"
                       default="1"
                       label="PLG_SEARCH_RSEVENTS_ENABLE_DESC_SEARCH"
                       description="PLG_SEARCH_RSEVENTS_ENABLE_DESC_SEARCH_DESC">
                    <option value="1">PLG_SEARCH_VM_CF_YES</option>
                    <option value="0">PLG_SEARCH_VM_CF_NO</option>
                </field>
                <field name="enable_event_location_search"
                       type="radio"
                       default="1"
                       label="PLG_SEARCH_RSEVENTS_ENABLE_LOCATION_SEARCH"
                       description="PLG_SEARCH_RSEVENTS_ENABLE_LOCATION_SEARCH_DESC">
                    <option value="1">PLG_SEARCH_VM_CF_YES</option>
                    <option value="0">PLG_SEARCH_VM_CF_NO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
